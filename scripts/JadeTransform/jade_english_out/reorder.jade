!!!
html
- var primaryBackgroundColor = '#FF0000';
- var primaryTextColor = '#000000';
- var secondaryBackgroundColor = '#393C45';
- var secondaryTextColor = '#';
- var logoName = 'cid:concrite.png';
- var generalBackgroundColor = '#ffffff';
- var localBackgroundColor = '#ffffff';
- var headerBorderColor = '#eee';
- var headerTextColor = '#393C45';
- var fontFamily = 'Arial';
- var primaryFontSize = '14px';
- var secondaryFontSize = '11px';
- var title = 'Order: ';

    -var startDate = (concrete.startDate) ? moment(concrete.startDate).format("MMM DD, YYYY") : "";
    head
        title #{title} #{startDate}
    body
        div(style="background-color: #{generalBackgroundColor}; width: 100%; height: 100%; font-family: '#{fontFamily}';")
            div(style="background-color: #{primaryBackgroundColor};color: #{primaryTextColor};")
                table(style="background-color: #{primaryBackgroundColor};color: #{primaryTextColor};border-top: solid 5px #{secondaryBackgroundColor};")
                    tbody
                        tr
                            td(style="width:100%;")
                                strong(style="padding: 10px 10px; margin: 0px;font-family: '#{fontFamily}';") Order Request - #{startDate}
                            td
                                img(src="#{logoName}", alt="Logo")
            div                                
                table(style="width: 100%;background-color: #{generalBackgroundColor};")
                    tr
                        td(style="padding: 20px; width: 100%;")
                            table(style="background-color: #{localBackgroundColor}; border: solid 2px #{secondaryBackgroundColor};font-size: #{primaryFontSize};width: 100%;")
                                tr
                                    td(style="padding: 0px 0px 10px 0px;")
                                         table(style="width: 100%;")
                                         
                                            tr
                                                td(style="width:60%;border-bottom: 1px solid #{headerBorderColor};")
                                                    strong(style="padding: 0px 0px 0px 10px;color: #{headerTextColor};font-family: '#{fontFamily}';") Customer
                                                td(style="width:40%;border-bottom: 1px solid #{headerBorderColor};")
                                                    strong(style="padding: 0px 0px 0px 10px;color: #{headerTextColor};font-family: '#{fontFamily}';") Project
                                            tr
                                                td(style="width: 60%; font-family: '#{fontFamily}';") #{customer.name || ""} (#{customer.code || ""})
                                                td(style="width: 40%; font-family: '#{fontFamily}';") #{project.name || ""} (#{project.code || ""})
                                            tr
                                                td(style="width: 60%; font-family: '#{fontFamily}';") #{requester.fname || ""} #{requester.lname || ""}
                                                td(style="width: 40%; font-family: '#{fontFamily}';") #{customer.address.lineOne || ""}
                                            tr
                                                td(style="width: 60%; font-family: '#{fontFamily}';") #{requester.email || ""}
                                                td(style="width: 40%; font-family: '#{fontFamily}';") #{customer.address.lineTwo || ""}
                                            tr
                                                td(style="width: 60%; font-family: '#{fontFamily}';") #{requester.phone || ""}
                                                td(style="width: 40%; font-family: '#{fontFamily}';")
                                
                                tr
                                    td(style="padding: 0px 0px 10px 0px;")
                                         table(style="width: 100%;")
                                              tr
                                                  td(style="width: 100%; padding: 10px 0px 0px 0px; border-bottom: 1px solid #{headerBorderColor};")
                                                      strong(style="padding: 0px 0px 0px 10px;color: #{headerTextColor};font-family: '#{fontFamily}';") Concrete
                                              tr                       
                                                  td
                                                     table(style="width: 100%;")
                                                          tr
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Code:
                                                              td(style="width: 70%;text-align:left;font-family: '#{fontFamily}';") #{concrete.code || ""}
                                                          tr
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Description:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{concrete.description || ""}
                                                          tr
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Quantity:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{concrete.shippedQty || ""} <span style="text-transform: uppercase;">&nbsp;#{concrete.shippedUOM || ""}</span>
                                                          tr
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Truck Type:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{concrete.truckType || ""}
                                                          tr
                                                              -var startTime = (concrete.startTime) ? moment.utc(concrete.startTime).format("HH:mm") : "";
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Start Time:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{startTime}
                                                          tr
                                                              -var loadSize = (concrete.loadSize) ? Globalize.format(concrete.loadSize, "d") : "";
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Load Size:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{concrete.startTime} <span style="text-transform: uppercase;">&nbsp;#{concrete.shippedUOM}</span>
                                                          tr
                                                              -var truckSpacing = (concrete.truckSpacing) ? Globalize.format(concrete.truckSpacing, "d" ) : "";
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Truck Spacing:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{truckSpacing} <span style="text-transform: uppercase;">&nbsp;min</span>
                                                          // tr
                                                              -var startDate = (concrete.startDate) ? moment(concrete.startDate).format("MMM DD, YYYY") : "";
                                                              td(style="width: 20%;font-family: '#{fontFamily}';"): strong Start Date:
                                                              td(style="width: 60%;text-align:left;font-family: '#{fontFamily}';") #{startDate}
                                
                                tr
                                    td(style="padding: 0px 0px 10px 0px;")
                                         table(style="width: 100%;")
                                              tr
                                                  td(style="width: 100%; padding: 10px 0px 0px 0px; border-bottom: 1px solid #{headerBorderColor};")
                                                      strong(style="padding: 0px 0px 0px 10px;color: #{headerTextColor};font-family: '#{fontFamily}';") Extra Items
                                              if items && items.length > 0
                                                  tr
                                                      td(style="padding: 0px 10px 0px 10px;")
                                                        table(style="border: none; width:100%;")
                                                            thead(style="font-family: '#{fontFamily}';font-size: #{primaryFontSize};")
                                                                tr
                                                                    td(style="width: 20%;font-family: '#{fontFamily}';"): strong Code
                                                                    td(style="width: 35%;font-family: '#{fontFamily}';"): strong Description
                                                                    td(style="width: 10%;font-family: '#{fontFamily}';"): strong Quantity
                                                            tbody(style="font-family: '#{fontFamily}';")
                                                                each item in items
                                                                    tr
                                                                        td(style="width: 20%;text-align: left;font-family: '#{fontFamily}';")= item.code
                                                                        td(style="width: 35%;text-align: left;font-family: '#{fontFamily}';")= item.description
                                                                        -var shippedQty = (item.shippedQty) ? Globalize.format(item.shippedQty, "d") : "";
                                                                        td(style="width: 10%;text-align: right;font-family: '#{fontFamily}';") #{shippedQty}
                                                                            span(style="text-transform: uppercase;") &nbsp;#{item.shippedUOM}
                                   
                                tr
                                    td(style="padding: 0px 0px 10px 0px;")
                                         table(style="width: 100%;")
                                              tr
                                                  td(style="width: 100%; padding: 10px 0px 0px 0px; border-bottom: 1px solid #{headerBorderColor};")
                                                      strong(style="padding: 0px 0px 0px 10px;color: #{headerTextColor};font-family: '#{fontFamily}';") Comments
                                              tr
                                                  td(style="width: 100%; padding: 10px 0px 0px 10px;font-family: '#{fontFamily}';") #{comments || ""}
                                                      
            div(style="width: 100%; background-color: #{primaryBackgroundColor};color: #{primaryTextColor};")
                table(style="width: 100%; background-color: #{primaryBackgroundColor};color: #{primaryTextColor};font-size: #{secondaryFontSize};border-top: solid 5px #{secondaryBackgroundColor};")
                    tbody
                        tr
                            td &nbsp;
